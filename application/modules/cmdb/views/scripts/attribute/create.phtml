                    }
                });
                addValidationOptions();
            },
            "html"
        );
    }

    function hideUselessButtons() {
        if ($("#tabs").tabs('option', 'active') == 0) {
            $('#back').hide();
            $('#next').show();
        } else if ($("#tabs").tabs('option', 'active') == 4) {
            $('#next').hide();
            $('#back').show();
        } else {
            $('#next').show();
            $('#back').show();
        }
    }


