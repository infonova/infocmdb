# grumphp.yml
parameters:
    process_timeout: 300
    tasks:
        composer:
            strict: true
        composer_require_checker: ~
        phpcsfixer2:
            allow_risky: true
            config: .php_cs
        phpstan:
            configuration: phpstan.neon
        phpunit:
            metadata:
                priority: 100
            always_execute: true
